FROM python:3.11-slim

WORKDIR /app

# Install requirements directly in Dockerfile
RUN pip install --no-cache-dir \
    flask \
    flask-cors \
    requests \
    beautifulsoup4 \
    lxml \
    pandas \
    numpy \
    urllib3

# Copy application files
COPY . .

EXPOSE 9000

CMD ["python", "server.py"]